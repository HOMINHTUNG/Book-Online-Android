                            android:layout_weight="1"
                            android:ems="10"
                            android:paddingLeft="10dp"
                            android:textSize="14dp" />
                    </TableRow>
                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:weightSum="2">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:layout_marginStart="8dp"
                            android:background="#dcf1f2"
                            android:drawableBottom="@color/colorAccent"
                            android:gravity="right"
                            android:paddingBottom="5dp"
                            android:paddingRight="30dp"
                            android:paddingTop="5dp"
                            android:text="Tình trạng:"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/txt_TinhTrang_cn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_span="1"
                            android:layout_weight="1"
                            android:ems="10"
                            android:paddingLeft="10dp"
                            android:textSize="14dp" />
                    </TableRow>

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:weightSum="2">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:layout_marginStart="8dp"
                            android:background="#dcf1f2"
                            android:drawableBottom="@color/colorAccent"
                            android:gravity="right"
                            android:paddingBottom="5dp"
                            android:paddingRight="30dp"
                            android:paddingTop="5dp"
                            android:text="Địa chỉ:"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/txt_DiaChi_cn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_span="1"
                            android:layout_weight="1"
                            android:inputType="textMultiLine"
                            android:paddingBottom="30dp"
                            android:paddingLeft="10dp"
                            android:textSize="14dp" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <Button
                            android:id="@+id/btn_DoiMatKhau_cn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:layout_marginStart="8dp"
                            android:layout_span="1"
                            android:background="@drawable/coler_menu_tool"
                            android:text="Đổi mật khẩu" />

                        <Button
                            android:id="@+id/btn_SuaNhanVien_cn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginStart="8dp"
                            android:layout_span="1"
                            android:background="@drawable/coler_menu_tool"
                            android:text="Sửa thông tin" />
                    </TableRow>
                </TableLayout>
        </RelativeLayout>
    </ScrollView>
    </RelativeLayout>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
