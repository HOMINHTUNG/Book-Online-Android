<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    card_view:cardBackgroundColor="@android:color/white"
    card_view:cardCornerRadius="5dp"
    card_view:cardElevation="8dp"
    card_view:cardUseCompatPadding="true"
    card_view:contentPadding="5dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_Xoa_item_gh"
            android:layout_width="20dp"
            android:layout_height="20dp"

            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:adjustViewBounds="true"
            android:padding="3dp"
            android:src="@drawable/ic_xoa" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <ImageView
                android:id="@+id/img_Sach_item_gh"
                android:layout_width="100dp"
                android:layout_height="130dp"

                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/button_bg" />

            <TextView
                android:id="@+id/txt_TenSach_item_gh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/img_Sach_item_gh"
                android:layout_toRightOf="@+id/img_Sach_item_gh"
                android:text="Tên sách"
                android:textColor="@color/Tex"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_below="@+id/txt_TenSach_item_gh"
                android:layout_marginStart="10dp"
                android:layout_marginTop="11dp"
                android:layout_toEndOf="@+id/img_Sach_item_gh"
                android:layout_toRightOf="@+id/img_Sach_item_gh"
                android:layout_weight="1"
                android:text="Giá thuê"
                android:textColor="@color/Tex"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/txt_TriGia_item_gh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView3"
                android:layout_alignBottom="@+id/textView3"
                android:layout_marginStart="30dp"
                android:layout_toEndOf="@+id/textView3"
                android:layout_toRightOf="@+id/textView3"
                android:background="@drawable/button_bg"
                android:gravity="center"
                android:padding="2dp"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:text="100000.0₫"
                android:textColor="@color/White"
                android:textSize="12dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                android:layout_weight="1"
                android:text="Tiền cọc"
                android:textColor="@color/Tex"
                android:textSize="12dp"
                android:layout_alignTop="@+id/txt_TienCoc_item_gh"
                android:layout_alignLeft="@+id/textView3"
                android:layout_alignStart="@+id/textView3" />

            <TextView
                android:id="@+id/txt_TienCoc_item_gh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignLeft="@+id/txt_TriGia_item_gh"
                android:layout_alignStart="@+id/txt_TriGia_item_gh"
                android:layout_below="@+id/txt_TriGia_item_gh"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_bg"
                android:gravity="center"
                android:padding="2dp"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:text="100000.0₫"
                android:textColor="@color/White"
                android:textSize="12dp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="#00000000"
                android:text="Số lượng mượn: "
                android:textColor="@color/Tex"
                android:textSize="12dp"
                android:layout_below="@+id/txt_TienCoc_item_gh"
                android:layout_alignLeft="@+id/textView6"
                android:layout_alignStart="@+id/textView6" />

            <TextView
                android:id="@+id/txt_SoLuongMuon_item_gh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:background="#00000000"
                android:hint="100"
                android:inputType="number"
                android:maxLength="1"
                android:paddingLeft="18dp"
                android:paddingTop="5dp"
                android:textColor="@color/Tex"
                android:textSize="13dp"
                android:layout_alignBaseline="@+id/textView5"
                android:layout_alignBottom="@+id/textView5"
                android:layout_toRightOf="@+id/textView5"
                android:layout_toEndOf="@+id/textView5" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/txt_TongTien_item_gh"
                android:layout_alignBottom="@+id/txt_TongTien_item_gh"
                android:layout_toLeftOf="@+id/txt_TongTien_item_gh"
                android:layout_toStartOf="@+id/txt_TongTien_item_gh"
                android:background="#00000000"
                android:text="Tổng tiền:"
                android:textColor="@color/Tex"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/txt_TongTien_item_gh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/txt_SoLuongMuon_item_gh"
                android:background="#00000000"
                android:hint="100"
                android:inputType="number"
                android:paddingLeft="18dp"
                android:paddingTop="20dp"
                android:textColor="@color/Tex"
                android:textSize="13dp" />

        </RelativeLayout>
    </RelativeLayout>


</android.support.v7.widget.CardView>


